<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#0000FF</item>
        
        <item name="textColorError">#FF17DC13</item>
    </style>

    <style name="MyStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#AA00FF</item><!--提示字体的颜色-->
        <item name="android:textSize">22sp</item><!--提示字体的大小-->
    </style>

    //修改错误提示语的样式
    <style name="myError" >
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
</resources>
